{% extends 'baseUser.html.twig' %}

{% block title %}Relaxeo - Modifier le Mot de Passe{% endblock %}
  
{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Modifier le Mot de Passe</h1>
    </div>
   
            <form method="post" action="{{path('modifyPassword')}}">
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                        <label for="formerPassword">Mot de passe actuel</label>
                        <input type="password" name="formerPassword" id="formerPassword" class="form-control form-control-user" required />
                  </div>
                  <div class="col-sm-6">
                        <label for="password">Nouveau mot de Passe</label>
                        <input type="password" name="password" id="password" class="form-control form-control-user" required />
                  </div>
                </div>
                
                <div class="form-group row">               
                    <div class="col-sm-4 mb-3 mb-sm-0">               
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                        Enregistrer les modifications
                        </button>
                    </div>
         
                </div>                               
            </form>
{% endblock %}
