{% extends 'baseAdmin.html.twig' %}

{% block title %}Relaxeo - Créer un coach{% endblock %}


{% block body %}
     <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Créer un coach</h1>
    </div>  
   
    {{ form_start(form) }}
    {{ form_row(form._token) }}
     <div class="alert-primary"> {{ form_errors(form.password) }}</div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    {{ form_row(form.firstname,{'label':'Prénom', 'attr':{'class':'form-control form-control-user','placeholder':'Prénom','tabindex':'1','autofocus':''}}) }}
                    
                  </div>
                  <div class="col-sm-6">
                    {{ form_row(form.lastname,{'label':'Nom', 'attr':{'class':'form-control form-control-user','placeholder':'Nom','tabindex':'2'}}) }}
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    {{ form_row(form.email,{'label':'Email', 'attr':{'class':'form-control form-control-user','placeholder':'Email','tabindex':'3'}}) }}
                  </div>
                  <div class="col-sm-6">
                    
                  </div>
                </div>              
                
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">                    
                    {{ form_row(form.password,{'label':'Mot de Passe', 'attr':{'class':'form-control form-control-user','placeholder':'Mot de Passe','tabindex':'5'}}) }}
                  </div>                 
                </div>
                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                <button type="submit" class="btn btn-success btn-user btn-block">
                  Créer le coach
                </button> 
                </div>
                </div>      
   {{ form_end(form) }}
    
{% endblock %}


