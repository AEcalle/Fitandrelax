{% extends 'baseAdmin.html.twig' %}

{% block title %}Relaxeo - Créer une Notification{% endblock %}


{% block body %}
     <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Créer une Notification</h1>
    </div>  
   
    {{ form_start(form) }}
    {{ form_row(form._token) }}

                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                   {{ form_row(form.createdAt,{'label':'Date', 'attr':{'class':'form-control form-control-user'}}) }}
                    
                  </div>
                  <div class="col-sm-6">
                    {{ form_row(form.structure,{'label':'Structure', 'attr':{'class':'form-control form-control-user'}}) }}
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    {{ form_row(form.content,{'label':'Texte', 'attr':{'class':'form-control form-control-user'}}) }}
                  </div>
                  <div class="col-sm-6">
                    
                  </div>
                </div>              
                <div class="form-group row">
                  <div class="col-sm-4 mb-3 mb-sm-0">
                <button type="submit" class="btn btn-success btn-user btn-block">
                  Créer
                </button> 
                </div>
                </div>      
   {{ form_end(form) }}
    
{% endblock %}
{% block javascripts %} 
    <script>   
    var defaultCreatedAt = new Date().toISOString().substring(0,11)+""+new Date().toString().substring(16,21);    
    document.getElementById('notification_createdAt').value = defaultCreatedAt;   

    </script>
{% endblock %}