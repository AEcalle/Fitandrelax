{% extends 'baseSecurity.html.twig' %}
{% block title %}Réinitialiser le mot de passe{% endblock %}
{% block body %}

    <div class="row justify-content-center no-gutters">

      <div class="col-xl-8 col-lg-10 col-md-7">

        <div class="card o-hidden border-0 shadow-lg my-0 my-lg-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">              
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">Réinitialiser le mot de passe</h1>
                    <p class="mb-4">Saisissez ici votre nouveau mot de passe</p>
                     {% for message in app.flashes('notice') %}
                    <div class="alert-success">
                        {{ message }}
                     </div>
                     {% endfor %} 
                  </div>
                  <form class="user" method="post" action="{{path('security_newPwd')}}">
                  <input type="hidden" name="userId" value="{{userId}}" />
                  <input type="hidden" name="token" value="{{token}}" />
                    <div class="form-group">
                      <input type="password" class="form-control form-control-user" id="password" name="password" placeholder="Nouveau mot de passe...">
                    </div>
                    <button type="submit" class="btn btn-success btn-user btn-block">
                      Envoyer
                    </button>
                  </form>            
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
    {% endblock %}